# The following options will be passed to all MySQL clients
[client]
#password       = your_password
port            = 3306
socket          = /tmp/mysql.sock

# The MySQL server
[mysqld]
interactive_timeout=3600
wait_timeout=3600
max_allowed_packet=32M
max_connections=200
max_connect_errors = 10000000

slow_query_log=ON
slow_query_log_file=/var/log/mysql/mysql_slow_query.log
#slow_query_log_file=/dev/stdout
long_query_time=1
#log_queries_not_using_indexes=ON

port            = 3306
socket          = /tmp/mysql.sock
skip-external-locking

# Recommended in standard MySQL setup
#sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_ALL_TABLES
# Enabled
#sql_mode=STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
# Disabled
sql_mode=NO_ENGINE_SUBSTITUTION

group_concat_max_len=2048

# === Thread/Table Cache ===
table_open_cache = 2048
thread_cache_size = 16
open_files_limit = 65535

# === Per-Thread Buffers (keep small, multiplied by connections) ===
sort_buffer_size = 256K
join_buffer_size = 256K
read_buffer_size = 256K
read_rnd_buffer_size = 512K

# === MyISAM (minimal - required by system tables) ===
key_buffer_size = 16M

# === InnoDB Settings (8GB RAM - 5GB buffer pool ~62%) ===
# 1G
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 1
# Set .._log_file_size to 25 % of buffer pool size
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_lock_wait_timeout = 50

# I/O settings (SSD optimized)
#innodb_io_capacity = 2000
#innodb_io_capacity_max = 4000
#innodb_flush_neighbors = 0
# HD
innodb_io_capacity = 200

# --- REPLICATION BLOCK ---
# Master-slave replication settings
# For MySQL=>Tarantool replication
binlog_format = ROW
performance_schema=ON
log-bin = mysql-bin
server-id = 1

[mysqldump]
quick
max_allowed_packet = 32M

[mysql]
no-auto-rehash
# Remove the next comment character if you are not familiar with SQL
#safe-updates

[mysqlhotcopy]
interactive-timeout
